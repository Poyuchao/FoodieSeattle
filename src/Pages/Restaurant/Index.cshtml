@page
@model ContosoCrafts.WebSite.Pages.Restaurant.IndexModel
@{
    ViewData["Title"] = "Index page";
}
<p style="line-height:5.5em;"> </p>


@{
    int counter = 0;
}

<!--CRUDi: Index page to show: contains a list of restaurants and links to Create, Read -->
<div class="container">

    <a asp-page="Create" class="btn btn-link" style="font-size: 20px;">+ Create</a>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th style="font-size: 30px;">Restaurants</th>
                <th style="font-size: 30px;">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var restaurant in Model.Restaurants)
            {
                <tr style="background-color: @(counter % 2 == 0 ? "beige" : "white")">
                    <td style="font-size: 25px; position:center;">@restaurant.Title</td>
                    <td style="text-align: left; font-size: 20px;"><a asp-page="Read" asp-route-id="@restaurant.Id"> <img src="~/img/icons/open.png" alt="Read" style="width: 40px; height: 40px;" /></a></td>
                </tr>
                counter++;
            }
        </tbody>
    </table>
</div>

